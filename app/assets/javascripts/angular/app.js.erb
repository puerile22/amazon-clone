var app = angular.module("amazonApp", ["ngRoute", 'ngResource']);

app.config(function($routeProvider) {
  $routeProvider
    .when("/", {
      templateUrl: "<%= asset_path('assets/templates/home.html') %>",
      controller: "ItemController"
    })
    .when("/checkout", {
      templateUrl: "<%= asset_path('assets/templates/checkout.html') %>",
      controller: "OrderController"
    })
    .when("/orderlist", {
      templateUrl: "<%= asset_path('assets/templates/past-orders.html') %>",
      controller: "ViewOrderController"
    })
    .when("/history", {
      templateUrl: "<%= asset_path('assets/templates/history.html') %>",
      controller: "HistoryController"
    })
});